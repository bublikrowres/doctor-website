<%include partials/header%>
    <div class='container-fluid '>
        <div class='row footerSpace' >
            <div id='backgroundImgComment' class='col-12 py-5 my-5'>
                <h1 class='text-center mt-4 d-inline-block'><b>Add a question/comment to <i>"<%= data.title%>"</b></i></h1>
                <div class='mt-5 mx-auto niceForm' >
                    <form action='/casestudies/<%= data._id%>' method='POST'>
                        <div class='form-group'>
                            <input required class='form-control' type='text' name='comment[author]' placeholder='Your Name'>
                        </div>
                        <textarea required rows="4" cols="40" name='comment[text]'></textarea>
                        <div class='form-group mt-2'>
                            <button class='btn btn-lg btn-success btn-block'>Submit</button>
                        </div>
                    </form>
                    <a class='btn btn-info btn-sm' href='/casestudies/<%= data._id%>'>Go Back</a>
                </div>
            </div>
        </div>
    </div>
<%include partials/footer%>