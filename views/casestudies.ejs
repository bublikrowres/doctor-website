<% include partials/header %>
<div id='backgroundCaseStudyPage' class='container-fluid mt-5 py-5'>
    <div class='row d-flex flex-column justify-content-center align-items-center'>
    <h1 id='searchText'>Search all cases by title</h1>
        <div class="input-group niceForm">
            
            <select class="custom-select" id="inputGroupSelect" aria-label="Example select with button addon">
                <option selected>Choose...</option>
                <%data.forEach((elem)=>{%>
                <option value="<%=elem._id%>"><%=elem.title.substring(0,35)%></option>
                <% }); %>
            </select>
        <div class="input-group-append">
            <a class='btn btn-info' id='gogoLink' href='' onclick='change()'>GO</a>
        </div>
        </div>       
    </div>
</div>
<div id='caseStudyLower' class='container-fluid'>
    <div class='row'>
        
        <%data.forEach((elem)=>{%>
        <div class='col-sm-6 col-md-4 col-lg-4 col-xl-3 p-5'>
            <span><a href='/casestudies/<%=elem._id%>'>
                <div class='card'>
                    <div class='card-body p-0'>
                        <h4 id='<%=elem._id%>' class='card-title mb-0 p-2 text-center'><strong><%=elem.title.substring(0,30)%>..</strong></h4>
                        <div class='imgGaleryCase d-flex flex-row align-items-center'>
                        <img class='card-img' src='<%=elem.image[0]%>'>
                        </div>
                        <div class='p-3'><%=elem.description1.substring(0,70)%> ...</div>
                        <a href='/casestudies/<%=elem._id%>' class='btn btn-info d-flex flex-column'>Read More</a>
                    </div>
                </div>
            </a></span>
        </div>
        <% }); %>
    </div>
 </div>
<% include partials/footer %>